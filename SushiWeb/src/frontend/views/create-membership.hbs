<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <h1>{{title}}</h1>

    {{#if successMessage}}
        <p style="color: green;">{{successMessage}}</p>
    {{/if}}
    {{#if errorMessage}}
        <p style="color: red;">{{errorMessage}}</p>
    {{/if}}

    <form method="POST" action="/staff/create-membership">
        <label for="MAKHACHHANG">Customer ID:</label>
        <input type="text" name="MAKHACHHANG" required><br>

        <label for="HOTEN">Full Name:</label>
        <input type="text" name="HOTEN" required><br>

        <label for="SDT">Phone Number:</label>
        <input type="text" name="SDT" required><br>

        <label for="EMAIL">Email:</label>
        <input type="email" name="EMAIL" required><br>

        <label for="CCCD">ID Card (CCCD):</label>
        <input type="text" name="CCCD" required><br>

        <button type="submit">Create/Update Membership</button>
    </form>

</body>
</html>
