{{!-- customer-order-trends.hbs --}}
<h1>{{title}}</h1>

{{#if errorMessage}}
    <div class="error">{{errorMessage}}</div>
{{/if}}

{{#if trendsData}}
    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Phone Number</th>
                <th>Branch ID</th>
                <th>Orders at the Branch</th>
                <th>Online Orders</th>
            </tr>
        </thead>
        <tbody>
            {{#each trendsData}}
                <tr>
                    <td>{{MAKHACHHANG}}</td>
                    <td>{{HOTEN}}</td>
                    <td>{{SDT}}</td>
                    <td>{{MACHINHANH}}</td>
                    <td>{{SO_LUONG_DH_TAI_CHO}}</td>
                    <td>{{SO_LUONG_DH_TRUCTUYEN}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{/if}}

<form method="POST" action="/staff/customer-order-trends">
    <label for="NgayBatDau">Start Date</label>
    <input type="date" id="NgayBatDau" name="NgayBatDau" required>
    <label for="NgayKetThuc">End Date</label>
    <input type="date" id="NgayKetThuc" name="NgayKetThuc" required>
    <label for="MaChiNhanh">Branch ID</label>
    <input type="text" id="MaChiNhanh" name="MaChiNhanh" required>
    <button type="submit">Submit</button>
</form>
