<!-- order-invoice.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <h1>{{title}}</h1>

    {{#if errorMessage}}
        <p style="color: red;">{{errorMessage}}</p>
    {{/if}}

    <!-- Form to enter the date -->
    <form action="/staff/order-invoice" method="POST">
        <label for="NgayDat">Enter Date (YYYY-MM-DD):</label>
        <input type="date" id="NgayDat" name="NgayDat" required>
        <button type="submit">Submit</button>
    </form>

    <!-- Display Orders and Invoices -->
    {{#if orders}}
        <table border="1">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Time</th>
                    <th>Customer Name</th>
                    <th>Customer Phone</th>
                    <th>Invoice ID</th>
                    <th>Total After Discount</th>
                    <th>Invoice Status</th>
                    <th>Order Type</th>
                    <th>Delivery Time</th>
                    <th>Delivery Address</th>
                    <th>Table Number</th>
                    <th>Branch</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                    <tr>
                        <td>{{this.MaDonHang}}</td>
                        <td>{{this.GioDatHang}}</td>
                        <td>{{this.TenKhachHang}}</td>
                        <td>{{this.SoDienThoai}}</td>
                        <td>{{this.MaHoaDon}}</td>
                        <td>{{this.ThanhTien}}</td>
                        <td>{{this.TrangThaiHoaDon}}</td>
                        <td>{{this.LoaiDonHang}}</td>
                        <td>{{this.ThoiGianGiaoHang}}</td>
                        <td>{{this.DiaChiGiaoHang}}</td>
                        <td>{{this.SoBanTaiCho}}</td>
                        <td>{{this.ChiNhanhTaiCho}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
</body>
</html>
