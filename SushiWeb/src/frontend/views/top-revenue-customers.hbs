<h1>{{title}}</h1>

{{#if errorMessage}}
  <div class="error">{{errorMessage}}</div>
{{/if}}

<form action="/staff/top-revenue-customers" method="POST">
  <div>
    <label for="NgayBatDau">Start Date:</label>
    <input type="date" name="NgayBatDau" id="NgayBatDau" required>
  </div>
  
  <div>
    <label for="NgayKetThuc">End Date:</label>
    <input type="date" name="NgayKetThuc" id="NgayKetThuc" required>
  </div>
  
  <div>
    <label for="SoLuongTop">Number of Top Customers:</label>
    <input type="number" name="SoLuongTop" id="SoLuongTop" required>
  </div>
  
  <button type="submit">Get Top Customers</button>
</form>

{{#if statisticsItems}}
  <h2>Top Revenue Customers</h2>
  <table>
    <thead>
      <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Card Type</th>
        <th>Total Revenue</th>
      </tr>
    </thead>
    <tbody>
      {{#each statisticsItems}}
        <tr>
          <td>{{this.MaKhachHang}}</td>
          <td>{{this.HoTen}}</td>
          <td>{{this.LoaiThe}}</td>
          <td>{{this.TongTienTichLuy}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}
