<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top-Selling Dishes - Truy váº¥n I</title>

    <link rel="stylesheet" href="../public/statistics.css">
</head>

<body>
    <div class="statistics_container">
        <div class="medium-title-deli">Top-Selling Dishes</div>

        <!-- Input Form -->
        <form action="/staff/top-selling-dishes" method="post" class="statistics_setup-input">
            <div class="form-group">
                <label for="NgayBatDau">Start Date:</label>
                <input type="date" id="NgayBatDau" name="NgayBatDau" required class="statistics_date-input">
            </div>
            <div class="form-group">
                <label for="NgayKetThuc">End Date:</label>
                <input type="date" id="NgayKetThuc" name="NgayKetThuc" required class="statistics_date-input">
            </div>
            <div class="form-group">
                <label for="SoLuongTop">Top Number of Dishes:</label>
                <input type="number" id="SoLuongTop" name="SoLuongTop" min="1" required class="statistics_date-input">
            </div>
            <div class="statistics_setup-input">
                <button type="submit" class="button-red">Get Top Dishes</button>
                <a class="button-gray" href="/staff/statistics">Back to Statistics</a>
            </div>
        </form>

        <!-- Display Error or Success Messages -->
        {{#if errorMessage}}
        <div class="alert alert-danger">
            <p>{{errorMessage}}</p>
        </div>
        {{/if}}

        {{#if statisticsItems}}
        <table>
            <thead>
                <tr>
                    <th>Dish Name</th>
                    <th>Quantity Sold</th>
                    <th>Total Revenue</th>
                </tr>
            </thead>
            <tbody>
                {{#each statisticsItems}}
                <tr>
                    <td>{{TenMon}}</td>
                    <td>{{TongSoLuong}}</td>
                    <td>{{TongDoanhThu}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
</body>
</html>
