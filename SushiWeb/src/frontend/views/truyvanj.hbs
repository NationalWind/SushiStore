<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Revenue Customers</title>
    <link rel="stylesheet" href="../public/statistics.css">
</head>

<body>
    <div class="statistics_container">
        <div class="medium-title-deli">Top Revenue Customers</div>

        <!-- Form for selecting start date, end date, and top customer count -->
        <form action="/staff/top-revenue-customers" method="POST">
            <div class="statistics_setup-input">
                <label for="NgayBatDau" class="statistics_date-input-label">Start Date</label>
                <input type="date" name="NgayBatDau" id="NgayBatDau" required class="statistics_date-input">

                <label for="NgayKetThuc" class="statistics_date-input-label">End Date</label>
                <input type="date" name="NgayKetThuc" id="NgayKetThuc" required class="statistics_date-input">

                <label for="SoLuongTop" class="statistics_date-input-label">Number of Top Customers</label>
                <input type="number" name="SoLuongTop" id="SoLuongTop" required class="statistics_number-input">
            </div>

            <div class="statistics_setup-input">
                <button type="submit" class="button-red">Get Top Customers</button>
            </div>
        </form>

        <!-- Error message if present -->
        {{#if errorMessage}}
            <div class="error">{{errorMessage}}</div>
        {{/if}}

        <!-- Display the top customers table if statisticsItems are available -->
        {{#if statisticsItems}}
            <h2>Top Revenue Customers</h2>
            <table>
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Card Type</th>
                        <th>Total Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each statisticsItems}}
                        <tr>
                            <td>{{this.MaKhachHang}}</td>
                            <td>{{this.HoTen}}</td>
                            <td>{{this.LoaiThe}}</td>
                            <td>{{this.TongTienTichLuy}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>Your statistics are empty.</p>
        {{/if}}

        <div class="statistics_setup-input">
            <a class="button-gray" href="/staff/statistics">Back to Statistics</a>
        </div>
    </div>
</body>

</html>
